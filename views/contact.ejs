<% include layoutTop %>

<script type= "text/javascript">
var RecaptchaOptions = {
theme: 'custom',
lang: 'en',
custom_theme_widget: 'recaptcha_widget'
};
</script>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    <section>
        <div id="smalllayout">
            <% if (typeof message !== "undefined") { %>
                <center><h3><%= message %></h3><br><br></center>
            <% } %>
        </div>
        <div id="contact-wrap">
            <div id="contact-left_col">
                <h4>Let us know you care!</h4>
                <p>This site is still in beta and growing everyday.<br><br>Feedback or comments are much appreciated.</p><br>
                <div id="biglayout"><img id="polish-image2" src="/images/polishheart.jpg"/></div>
            </div>
            <div id="contact-right_col">
                <form action="/contact" method="post" enctype="multipart/form-data">
                    Name:<br><input type="text" name="name" style="display:block; width:95%;" <%if (typeof inputname !== "undefined") {%>value="<%=inputname%>" <%}%> required autofocus><br><br>
                    Email:<br><input type="text" name="email" style="display:block; width:95%;" <%if (typeof inputemail !== "undefined") {%>value="<%=inputemail%>" <%}%>required><br><br>
                    Message:<br><textarea name="usermessage" rows="10" style="width:95%;" <%if (typeof inputmessage !== "undefined") {%>value="<%=inputmessage%>" <%}%>required><%if (typeof inputmessage !== "undefined") {%><%=inputmessage%><%}%></textarea><br><br>
                    <div id="recaptcha_widget" style="display: none;">
                        <div id="recaptcha_image"></div>
                        <span class="recaptcha_only_if_image">Enter the words above:</span>
                        <span class="recaptcha_only_if_audio">Enter the numbers you hear:</span>
                        <br><input id="recaptcha_response_field" name="recaptcha_response_field" type="text" class="width50">
                        <br><strong style="font-size: 10px;"><a href="javascript:Recaptcha.reload();">Get another CAPTCHA</a></strong>

                        <!--div class="recaptcha_only_if_image"><a href="javascript:Recaptcha.switch_type('audio')">Get an audio CAPTCHA</a></div><br />
                        <div class="recaptcha_only_if_audio"><a href="javascript:Recaptcha.switch_type('image')">Get an image CAPTCHA</a></div><br /><br />
                        <div><a href="javascript:Recaptcha.showhelp()">Help</a><br />
                        </div-->

                        <script type="text/javascript" src="http://api.recaptcha.net/challenge?k=6Lf6yRAUAAAAAIUum-58aneAsxUsLWbVrMhRiQ-c"></script>

                        <noscript>
                        <iframe src="http://api.recaptcha.net/noscript?k=k=6Lf6yRAUAAAAAIUum-58aneAsxUsLWbVrMhRiQ-c" height="200" width="500" frameborder="0"></iframe>
                        <textarea name="recaptcha_challenge_field" rows="3" class="width50"></textarea>
                        <input type="'hidden'" name="'recaptcha_response_field'" value="'manual_challenge'">
                        </noscript>
                    </div><br><br>
                    <input type="submit" class="button" value="Submit Feedback"/>
                </form>
                <div id="biglayout">
                    <% if (typeof message !== "undefined") { %>
                        <br><br><b><%= message %></b><br><br><br>
                    <% } %>
                </div>
                <div id="smalllayout"><br><br><img id="polish-image" src="/images/polishheart.jpg"/></div>
            </div>
        </div>
    </section>
    </div>
</div>

<% include layoutBottom %>