<%- include('../layoutTop'); %>

<script src="/scripts/jquery.js"></script>
<script src="/scripts/jquery.mobile.custom.min.js"></script>
<script src="/scripts/markitup/jquery.markitup.js"></script>
<script type="text/javascript" src="/scripts/markitup/sets/html/set.js"></script>
<link rel="stylesheet" type="text/css" href="/scripts/markitup/skins/simple/style.css" />
<link rel="stylesheet" type="text/css" href="/scripts/markitup/sets/html/style.css" />

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    	<section>
            <div>
        		<form action="/admin/brandedit/<%= brand.id %>" method="post">
    	     		<h3>Edit <%= brand.name %>:</h3><br><br>
                    Bio: <textarea class="markItUp" type="text" name="bio" value="<%= brand.bio %>"><%= brand.bio %></textarea><br>
                    Official: <select name="official">
                        <option value="false" <% if (brand.official === false) { %> selected='selected' <%}%>>No</option>
                        <option value="true" <% if (brand.official === true) { %> selected='selected' <%}%>>Yes</option>
                    </select><br><br><br>
                    Polish Lock: <select name="polishlock">
                        <option value="false" <% if (brand.polishlock === false) { %> selected='selected' <%}%>>No</option>
                        <option value="true" <% if (brand.polishlock === true) { %> selected='selected' <%}%>>Yes</option>
                    </select><br><br><br>
                    Indie: <select name="indie">
                        <option value="false" <% if (brand.indie === false) { %> selected='selected' <%}%>>No</option>
                        <option value="true" <% if (brand.indie === true) { %> selected='selected' <%}%>>Yes</option>
                    </select><br><br><br>
                    <input type="submit" value="Submit" class="button">

                </form>
            </div>
        </section>
    </div>
</div>

<%- include('../layoutBottom'); %>