<% include layoutTop %>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    	<section>
    		<form action="/review/edit/<%= polishid %>" method="post">
	     		<h3>Edit Review for: <%= polishbrand %> - <%= polishname %>:</h3><br><br>
    			Rating: <select name="rating">
                    <option value="0" <% if (rating === "0") { %> selected="selected" <%}%>>select a rating</option>
                    <option value="1" <% if (rating === "1") { %> selected="selected" <%}%>>*</option>
                    <option value="2" <% if (rating === "2") { %> selected="selected" <%}%>>**</option>
                    <option value="3" <% if (rating === "3") { %> selected="selected" <%}%>>***</option>
                    <option value="4" <% if (rating === "4") { %> selected="selected" <%}%>>****</option>
                    <option value="5" <% if (rating === "5") { %> selected="selected" <%}%>>*****</option>
                </select><br><br><br>
                Review:<br> <textarea autofocus class="width50" rows="5" name="userreview"><%= userreview %></textarea><br><br><br>
                Notes: <i>(Will only be visible to you.)</i><br> <textarea  class="width50" rows="5" name="notes"><%= notes %></textarea><br><br><br>
                <input type="submit" value="Submit" class="button">
            </form>
            </div>
        </section>
    </div>
</div>

<% include layoutBottom %>