                <% } else if (useremail === "on") {%>
                    <br><br><a href="/profile/<%= username %>/message">Send a message</a>
                <% } %>
            <% } %>
            <br><br><br><p style="white-space: pre; padding-left: 3em"><%- about %></p>
        </div>
        <div>
