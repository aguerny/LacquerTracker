<%- include('../layoutTop'); %>

<script src='https://www.google.com/recaptcha/api.js'></script>

<script type= "text/javascript">
var RecaptchaOptions = {
theme: 'custom',
lang: 'en',
custom_theme_widget: 'recaptcha_widget'
};
</script>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    <section>
        <div>
            <% if (typeof message !== "undefined") { %>
                <center><b><%= message %></b><br><br><br><br></center>
            <% } %>
            <form action="/signup" method="post">
                <h3>Fill out the information below to get started.</h3><br><br>
                E-mail address:<br><input type="email" name="email" class="width50" required value="<%=email%>" placeholder="A validation message will be sent." autofocus><br><br><br>
                Confirm E-mail:<br><input type="email" name="emailconfirm" class="width50" required><br><br><br>
                Username:<br><input type="text" name="username" maxlength="20" class="width50" id="username" required value="<%=username%>" placeholder="Only use letters and numbers. No spaces or special characters allowed."><br><br><br>
                Password:<br><input type="password" name="password" class="width50" required minlength="8" placeholder="Minimum length is 8 characters."><br><br><br>
                Confirm Password:<br><input type="password" class="width50" name="passwordconfirm" required><br><br><br>
                How did you find us?<br><input name="source" class="width50" placeholder="Optional" maxlength="200"><br><br><br>
                <br>
                <div class="g-recaptcha" data-sitekey="6LcSeegUAAAAACSmq6y9_hXYCgEXdGknDqg99b__"></div><br><br><br><br><br>
                <input type="submit" value="Submit" class="button" id="login-button">
            </form>
        </div>
    </section>
    </div>
</div>

<script>
$('#username').on('input', function() {
    var c = this.selectionStart,
    r = /[^a-z0-9]/gi,
    v = $(this).val();
    if(r.test(v)) {
        $(this).val(v.replace(r, ''));
        c--;
    }
    this.setSelectionRange(c, c);
});

$("form").submit(function() {
    var _txt1 = $('[name=email]').val();
    var _txt2 = $('[name=emailconfirm]').val();

    if (_txt1 == _txt2) {
        return true;
    } else {
        alert('E-mails do not match.');
        return false;
    }
});

$("form").submit(function() {
    var _txt1 = $('[name=password]').val();
    var _txt2 = $('[name=passwordconfirm]').val();

    if (_txt1 == _txt2) {
        return true;
    } else {
        alert('Passwords do not match.');
        return false;
    }
});
</script>

